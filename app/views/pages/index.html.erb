    </div>

    <div class='circle-container'>
        <div class='circle' id="south-asia" data-current="<%= rand(@south_asia.count ) %>" data-max="<%= @south_asia.count %>">
        </div>  
        <p class='circle-label'>South Asia</p>
    </div>

    <div class='circle-container'>
        <div class='circle' id="east-africa" data-current="<%= rand(@east_africa.count ) %>" data-max="<%= @east_africa.count %>">
