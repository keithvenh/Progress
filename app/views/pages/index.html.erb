    <div class='circle-container'>
        <div class='circle' id="other" data-current="<%= rand(@other.count ) %>" data-max="<%= @other.count %>">
        </div>  
        <p class='circle-label'>Other</p>
    </div>

</div>


    <section class="progress-bar">

        <p class="progress-label">Southeast Asia</p>

        <div class="bar-container" style="width: 35%">

            <div class="bar" style="width: <%= seasia %>%;  background-color: #2851a3">

            <p class="current"><%= ((seasia/100.0) * 100).round() %></p>

            </div>

        </div>

        <p class="total">100</p>

    </section>

    <section class="progress-bar">

        <p class="progress-label">South Asia</p>

        <div class="bar-container" style="width: 35%">

            <div class="bar" style="width: <%= sasia %>%;  background-color: #179393">
            
                <p class="current"><%= ((sasia/100.0) * 100).round() %></p>

            </div>

        </div>

        <p class="total">100</p>

    </section>

    <section class="progress-bar">

