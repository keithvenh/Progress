<div class='overall-circle'>

    <div class='circle-container overall'>
        <div id="overall" data-current="<%= rand(@overall.count) %>" data-max="<%= @overall.count %>">

            

        </div>
        <p class='circle-label'>Overall</p>
    </div>

</div>

<div class='region-circles'>

    <div class='circle-container'>
        <div class='circle' id="australia" data-current="<%= rand(@australia.count) %>" data-max="<%= @australia.count %>">
        </div>  
        <p class='circle-label'>Australia & Melanesia</p>
    </div>

    <div class='circle-container'>
        <div class='circle' id="islands" data-current="<%= rand(@islands.count) %>" data-max="<%= @islands.count %>">
        </div>  
        <p class='circle-label'>Islands of Asia</p>
    </div>

    <div class='circle-container'>
        <div class='circle' id="se-asia" data-current="<%= rand(@se_asia.count) %>" data-max="<%= @se_asia.count %>">
        </div>  
