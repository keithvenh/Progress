<div class='form-container'>
    <p class='form-title'>Adopt a Language</p>

    <%= form_for [@user, @adoptee] do |f| %>

            <div class="form-category">

                <%= f.hidden_field :user_id, value: @user.id %>

                

                <div class="form-field">
                    <%= select(:adopted_language, :country, grouped_options_for_select(country_by_region(@countries)), {prompt: ''}, {class: "form-input select", id: 'country'}) %>
                    <p class="form-label">Country</p>
                </div>

                <div class="form-field">
                    <%= select(:adopted_language, :language_code, [], {prompt: 'Please Select A Country'}, {class: "form-input select", id: 'language', disabled: true}) %>
                    <p class="form-label">Language</p>
                </div>

            </div>

            <div class="form-field">
                <%= f.submit "Submit", class: "button form-button success", id: 'adopt-button', disabled: true %>
            </div>

    <% end %>

</div>