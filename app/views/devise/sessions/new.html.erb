<div class="form-container">

  <p class="form-title">Log In</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input text' %>
      <p class="form-label">Email</p>
    </div>

    <div class="form-field">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-input text' %>
      <p class="form-label">Password</p>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-field checkbox">
        <%= f.check_box :remember_me %>
        <p class='form-label'>Remeber Me</p>
      </div>
    <% end %>

    <div class="form-field">
      <%= f.submit "Log in", class: "button form-button success" %>
    </div>
  <% end %>

</div>
